FROM mcr.microsoft.com/dotnet/sdk:9.0-alpine3.22
LABEL maintainer=jon@jaggersoft.com

# gdb is required because it prevents core dumps for max file-size
# ulimits being exceeded which can otherwise happen for large packages.
USER root
RUN apk add gdb

USER sandbox
COPY . .
RUN ./install.sh
COPY red_amber_green.rb /usr/local/bin

